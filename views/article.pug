extends layout

block content
	h1=article.title
	h4 written by #{author}
	p=article.body
	small=article.created_at
	if user
		if user.id == article.author
			hr
			a.btn.btn-default(href="/articles/edit/" + article._id) Update 
			a.btn.btn-danger.delete-article(href='#', data-id=article._id) Delete